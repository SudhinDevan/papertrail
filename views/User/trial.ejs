<%- include('./partials/header.ejs') %>

    <%- include('./partials/sidebar.ejs') %>


        <div class="container-fluid d-flex gap-4" style="background-color: #EDF1F5;">

            <div style="overflow-y: auto;" class="w-100 d-flex align-items-center align-items-center">

                <div class="col-lg-12">
                    <div class="card mt-4">
                        <div class="card-header bg-light py-4 ">
                            <h4 class="mb-0">#Order Details</h4>
                            <p class="mb-0">
                                <%= order._id %>
                            </p>
                        </div>
                        <div class="card-body ">

                            <section>
                                <div class="container h-100">
                                    <div class="row d-flex justify-content-between">
                                        <div class="card card-stepper text-black col-lg-6 col-md-6"
                                            style="border-radius: 16px;">

                                            <div class="card-body pl-5">

                                                <span
                                                    class="flex justify-content-between align-items-center mb-5 text-center">
                                                    <span>
                                                        <h5 class="mb-0 text-center" style="display: inline;">Order
                                                            Placed By: </h5><br>
                                                        <h5 class="text-success" style="display: inline;">
                                                            <%= user.username %>
                                                        </h5>
                                                    </span><br>
                                                    <p class="mb-0 px-0"
                                                        style="font-size: 15px; font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif; line-height: 16px; display: inline;">
                                                        Order Placed on
                                                        <span><%=order.order_date.toLocaleDateString('en-GB', {
                                                                year: 'numeric' , month: 'numeric' , day: 'numeric'
                                                                });%></span>
                                                    </p>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="card card-stepper text-black  col-lg-4 col-md-6 ml-auto mt-1"
                                            style="border-radius: 16px;" id="orderStatus">
                                            <div class="card-body pt-5 pl-5">
                                                <h5 style="display: inline;">Status:</h5>
                                                <strong class="text-primary">
                                                    <%=order.order_status%>
                                                </strong><br>
                                                <%if(order.order_status=="pending" ){%>
                                                    <select class="form-select col-8 mt-2" id="status-select">
                                                        <option <% if(order.order_status==="pending" ) { %> selected <%
                                                                } %> value="pending">
                                                                -Change order Status-</option>
                                                        <option <% if(order.order_status==="shipped" ) { %> selected <%
                                                                } %> value="shipped">
                                                                Shipped</option>
                                                        <option <% if(order.order_status==="delivered" ) { %> selected
                                                            <% } %> value="delivered">
                                                                Delivered</option>
                                                        <option <% if(order.order_status==="cancelled" ) { %> selected
                                                            <% } %> value="cancelled">
                                                                Cancel</option>
                                                    </select>
                                                    <%}else if(order.order_status=="shipped" ){%>
                                                        <select class="form-select col-8 mt-2" id="status-select">
                                                            <option <% if(order.order_status==="shipped" ) { %> selected
                                                                <% } %> value="shipped">
                                                                    -Change order Status-</option>
                                                            <option <% if(order.order_status==="delivered" ) { %>
                                                                selected <% } %> value="delivered">
                                                                    Delivered</option>
                                                            <option <% if(order.order_status==="cancelled" ) { %>
                                                                selected <% } %> value="cancelled">
                                                                    Cancel</option>
                                                        </select>
                                                        <%}else if(order.order_status=="returnInitiated" ){%>
                                                            <select class="form-select col-8 mt-2" id="status-select">
                                                                <option <% if(order.order_status==="returnInitiated" ) {
                                                                    %> selected <% } %>
                                                                        value="returnInitiated">
                                                                        -Change order Status-</option>
                                                                <option <% if(order.order_status==="returnComplete" ) {
                                                                    %> selected <% } %>
                                                                        value="returnComplete">
                                                                        Return Completed</option>
                                                            </select>
                                                            <%}%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>


                        <div class="card m-3">
                            <div class="card-header">
                                Order details<br><small>Your order items</small>
                            </div>
                            <div class="card-body" style="overflow: auto;">
                                <table class="table text-center">
                                    <colgroup>
                                        <col width="100" />
                                        <col />
                                        <col width="1" />
                                        <col />
                                        <col width="100" />
                                        <col />
                                        <col width="1" />
                                        <col />

                                    </colgroup>
                                    <thead class="bg-primary text-dark">
                                        <tr>
                                            <th class="first">Image</th>
                                            <th class="text-center font-weight-500">Product</th>
                                            <th class="text-center  font-weight-500">Price</th>
                                            <th class="text-center  font-weight-500">Qty</th>
                                            <th class="text-start  font-weight-500">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-bordered">
                                        <% for( let i=0; i < products.length; i++ ) { %>
                                            <tr class="bg-light">
                                                <td class="product-thumbnail text-start">
                                                    <a href="#"><img src="<%=products[i].product.image[0].url %>"
                                                            alt="..." class="img-fluid" width="60vw"></a>
                                                </td>
                                                <td class="text-center" style="font-size: 1.2vw;">
                                                    <b href="#" class="text-dark ">
                                                        <%=products[i].product.productName %>
                                                    </b>
                                                </td>
                                                <td class="text-center text-dark" style="font-size: 1vw;">
                                                    ₹<%=products[i].product.price %>
                                                </td>
                                                <td class="text-center" style="font-size: 1vw;"><span>
                                                        <%=products[i].quantity %>
                                                    </span>
                                                </td>
                                                <td id="totalPrice" class="product-subtotal " style="font-size: 1vw;">
                                                    <span class="d-flex align-items-center">₹
                                                        <%=(products[i].quantity * products[i].product.price) %>
                                                    </span>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="card m-3">
                            <div class="card-header">
                                Shipping Address
                            </div>
                            <div class="card-body">

                                <strong>Phone:
                                </strong>
                                <%=address.phonenumber%><br>
                                    <%=address.buildingName%>,<%=address.street%>,<%=address.city%>,<br>
                                                <%=address.state%>,
                                                    <%=address.pincode%>

                            </div>
                        </div>
                        <div class="card m-3">
                            <div class="card-header">
                                Payment Mode
                            </div>
                            <div class="card-body">
                                <% if(order.payment_method=="cod" ){ %> Cash On Delivery <% } %>
                                        <% if(order.payment_method=="online" ){ %> Online Payment <% } %>
                            </div>
                        </div>
                        </section>
                    </div>
                </div>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.2.3/axios.min.js"></script>

            <script>


                document.getElementById('status-select').addEventListener('change', function (event) {
                    const status = event.target.value;
                    let id = '<%= order._id %>'
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "You want to change this",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Confirm'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            let order = axios({
                                method: "post",
                                url: `/admin/order/status`,
                                data: {
                                    id, status
                                },
                            }).then((data) => {
                                $.get(location.href, function (data) {
                                    $("#orderStatus").html($(data).find("#orderStatus").html());
                                    $("#status-select").html($(data).find("#status-select").html());
                                })
                            });
                            Swal.fire(
                                'Changed',
                                'success'
                            )
                        }
                    })
                });



            </script>
        </div>


        </div>

        <%- include('./partials/footer.ejs') %>